<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.MainActivity"
    android:background="@drawable/gradient_background">

    <ImageButton
        android:id="@+id/botonCorrer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/boton_redondo"
        android:onClick="onClick"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_run5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/estadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botoncitos_opciones"
        android:onClick="onClick"
        android:src="@drawable/ic_estadisticas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/botonCorrer"
        app:layout_constraintStart_toStartOf="@+id/botonCorrer"
        app:layout_constraintTop_toBottomOf="@+id/botonCorrer" />

    <ImageButton
        android:id="@+id/opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botoncitos_opciones"
        android:onClick="onClick"
        android:src="@drawable/ic_mas_opciones"
        app:layout_constraintBottom_toTopOf="@+id/estadisticas"
        app:layout_constraintEnd_toStartOf="@+id/estadisticas"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/musica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botoncitos_opciones"
        android:onClick="onClick"
        android:src="@drawable/ic_music"
        app:layout_constraintBottom_toTopOf="@+id/estadisticas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/estadisticas" />


</androidx.constraintlayout.widget.ConstraintLayout>